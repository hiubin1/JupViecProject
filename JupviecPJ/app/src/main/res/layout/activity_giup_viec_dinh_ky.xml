<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activty.GiupViecDinhKyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="75dp"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_dash"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/location24"
                                android:text="ĐIA CHỈ"
                                android:drawablePadding="8dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="14dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:textSize="13dp"
                                    android:text="Xô Viết Nghệ Tĩnh, Bình Thạnh, Thành phố Hồ Chí Minh"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:textColor="#808080"
                                    android:text="PM20"/>
                            </LinearLayout>

                            <Button
                                android:id="@+id/btnThayDoiGVDK"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Thay Đổi"
                                android:gravity="center"
                                android:textSize="13dp"
                                android:textColor="@color/white"
                                android:layout_gravity="right"
                                android:backgroundTint="@color/BlueApp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LỊCH LÀM VIỆC HÀNG TUẦN"
                            android:drawableLeft="@drawable/calendar24"
                            android:drawablePadding="8dp"
                            android:textSize="13dp"
                            android:gravity="center|left"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                app:cardCornerRadius="90dp">

                                <LinearLayout
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:background="@drawable/custom_circle_gray"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/TVlichT2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="T2"
                                        android:textColor="@color/black"
                                        android:textSize="16dp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                app:cardCornerRadius="90dp">

                                <LinearLayout
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:background="@drawable/custom_circle_gray"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/TVlichT3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="T3"
                                        android:textColor="@color/black"
                                        android:textSize="16dp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                app:cardCornerRadius="90dp">

                                <LinearLayout
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:background="@drawable/custom_circle_gray"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/TVlichT4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="T4"
                                        android:textColor="@color/black"
                                        android:textSize="16dp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                app:cardCornerRadius="90dp">

                                <LinearLayout
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:background="@drawable/custom_circle_gray"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/TVlichT5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="T5"
                                        android:textColor="@color/black"
                                        android:textSize="16dp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                app:cardCornerRadius="90dp">

                                <LinearLayout
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:background="@drawable/custom_circle_gray"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/TVlichT6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="T6"
                                        android:textColor="@color/black"
                                        android:textSize="16dp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                app:cardCornerRadius="90dp">

                                <LinearLayout
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:background="@drawable/custom_circle_gray"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/TVlichT7"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="T7"
                                        android:textColor="@color/black"
                                        android:textSize="16dp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                app:cardCornerRadius="90dp">

                                <LinearLayout
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:background="@drawable/custom_circle_gray"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/TVlichCN"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="CN"
                                        android:textColor="@color/black"
                                        android:textSize="16dp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:text="Ngày làm việc: "/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/pencil40"
                                android:layout_marginLeft="5dp"
                                android:textSize="13dp"
                                android:textColor="#008CFF"
                                android:text=" Ngày mai, 30/06/2023"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="THỜI GIAN LÀM VIỆC"
                            android:drawableLeft="@drawable/clock24"
                            android:textSize="13dp"
                            android:gravity="center|left"
                            android:drawablePadding="8dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_marginRight="10dp"
                                    app:cardCornerRadius="80dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="left|center"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="80dp"
                                        android:layout_height="35dp"
                                        android:background="@drawable/custom_circle_gray"
                                        android:orientation="horizontal"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/TVtglvDKSang"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="sáng"
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:textStyle="bold"
                                            android:textColor="@color/black"
                                            android:textSize="14dp"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="20dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    app:cardCornerRadius="80dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_gravity="center">

                                    <LinearLayout
                                        android:layout_width="80dp"
                                        android:layout_height="35dp"
                                        android:background="@drawable/custom_circle_gray"
                                        android:orientation="horizontal"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/TVtglvDKChieu"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="chiều"
                                            android:textColor="@color/black"
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:textStyle="bold"
                                            android:textSize="14dp"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="80dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="right|center"
                                    android:layout_marginBottom="5dp"
                                    android:layout_gravity="right">

                                    <LinearLayout
                                        android:layout_width="80dp"
                                        android:layout_height="35dp"
                                        android:background="@drawable/custom_circle_gray"
                                        android:orientation="horizontal"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/TVtglvDKToi"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="tối"
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:textSize="14dp"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giờ làm việc: "
                                android:textSize="13dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 13:00 - 16:30"
                                android:drawableLeft="@drawable/pencil40"
                                android:textColor="#008CFF"
                                android:layout_marginLeft="5dp"
                                android:textSize="13dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DỊCH VỤ THÊM"
                                android:drawableLeft="@drawable/addsquare24"
                                android:textSize="13dp"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:layout_marginRight="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                />

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="#ccc"
                                app:cardCornerRadius="10dp">


                                <ImageView
                                    android:id="@+id/imageButton"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="#ccc"
                                    app:srcCompat="@drawable/questionmark24" />
                            </androidx.cardview.widget.CardView>

                            <Button
                                android:id="@+id/btnXemBangGiaDVTGVDK"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:text="Xem bảng giá"
                                android:textColor="@color/white"
                                android:backgroundTint="@color/BlueApp"
                                android:layout_marginLeft="40dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:layout_gravity="right"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/moreInfoIronGVDK"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/question24"
                                            android:background="@drawable/custom_circle_blue"/>

                                    </LinearLayout>

                                    <ImageButton
                                        android:id="@+id/btnIronĐK"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:backgroundTint="@android:color/transparent"
                                        app:srcCompat="@drawable/iron40"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/tvIronWashing"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:gravity="center|top"
                                    android:text="Ủi đồ"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:layout_gravity="right"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/moreInfoCookDVTGVDK"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/question24"
                                            android:background="@drawable/custom_circle_blue"/>

                                    </LinearLayout>

                                    <ImageButton
                                        android:id="@+id/btnCookĐK"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:backgroundTint="@android:color/transparent"
                                        app:srcCompat="@drawable/pan40"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:inputType="textMultiLine"
                                    android:text="Nấu ăn cơ bản"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:layout_gravity="right"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/moreInfoPetDVTgvdk"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/question24"
                                            android:background="@drawable/custom_circle_blue"/>

                                    </LinearLayout>

                                    <ImageButton
                                        android:id="@+id/btnPetPlaceĐK"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:backgroundTint="@android:color/transparent"
                                        app:srcCompat="@drawable/pet40"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:inputType="textMultiLine"
                                    android:text="Vệ sinh khu vật nuôi"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="8dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TÙY CHỌN KHÁC"
                                android:textStyle="bold"
                                android:textSize="13dp"
                                android:textColor="@color/black"
                                android:drawableLeft="@drawable/addsquare24"
                                android:drawablePadding="8dp"/>

                            <ImageView
                                android:id="@+id/imgTuyChonKhacElse"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:backgroundTint="#D3D3D3"
