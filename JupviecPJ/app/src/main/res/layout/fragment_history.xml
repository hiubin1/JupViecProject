<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="75dp"
    tools:context=".FragmentCus.FragmentHistory">

    <include
        layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_dash_2"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/Tab_Layout_History"
        android:layout_width="match_parent"
        app:tabSelectedTextColor="@color/SmokyBlue"
        app:tabIndicatorColor="@color/SmokyBlue"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorHeight="4dp"
        android:layout_height="wrap_content"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/View_Pager_History"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>